{
    "name": "spryker/hello-storefront-rest-api",
    "type": "library",
    "description": "Hello Storefront Rest API module",
    "license": "proprietary",
    "require": {
        "php": ">=7.3"
    },
    "require": {
        "php": ">=7.3",
        "spryker/glue-application": "^1.10.0",
        "spryker/glue-application-extension": "^1.10.0",
        "spryker/glue-storefront-api-application": "*",
        "spryker/kernel": "^3.33.0"
    },
    "require-dev": {
        "spryker/code-sniffer": "*",
        "spryker/glue-application": "*",
        "spryker/kernel": "*",
        "spryker/symfony": "*"
    },
    "suggest": {
        "spryker/glue-application": "If you want to use plugins with glue application.",
        "spryker/symfony": "If you want to plugins with symfony components.",
        "spryker/kernel": "If you want to use kernel functionality with certain plugins"
    },
    "autoload": {
        "psr-4": {
            "Spryker\\": "src/Spryker/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
